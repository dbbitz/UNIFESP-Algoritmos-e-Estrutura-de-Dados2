{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "build",
          "type": "shell",
          "command": "gcc",
          "args": [
              "-g",
              "${file}",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          }
      },
      {
          "label": "run",
          "type": "shell",
          "command": "./${fileDirname}/${fileBasenameNoExtension}",
          "dependsOn": "build",
          "group": {
              "kind": "test",
              "isDefault": true
          }
      },
      
  ]
}
